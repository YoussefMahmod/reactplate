{
  "name": "reactplate",
  "version": "0.0.3",
  "description": "Minimal Setup & Fast Boilerplate for React.js with Vite",
  "scripts": {
    "dev": "node server",
    "build": "yarn build:client && yarn build:server",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --outDir dist/server --ssr src/entry-server.jsx",
    "generate": "vite build --outDir dist/static && yarn build:server && node prerender",
    "serve": "cross-env NODE_ENV=production node server",
    "debug": "node --inspect-brk server",
    "test": "run-s test-serve test-build",
    "test-build": "cross-env VITE_TEST_BUILD=1 jest",
    "test-serve": "jest"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "styled-components": "^5.3.0",
    "validate-npm-package-name": "^3.0.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@types/fs-extra": "^9.0.12",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.3.1",
    "@vitejs/plugin-legacy": "^1.4.4",
    "@vitejs/plugin-react-refresh": "^1.3.5",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "css-color-names": "^1.0.1",
    "express": "^4.17.1",
    "fs-extra": "^10.0.0",
    "jest": "^27.0.6",
    "node-fetch": "^2.6.1",
    "npm-run-all": "^4.1.5",
    "playwright-chromium": "^1.12.3",
    "regenerator-runtime": "^0.13.7",
    "serve-static": "^1.14.1",
    "sirv": "^1.0.12",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5",
    "vite": "^2.4.2",
    "vite-plugin-pwa": "^0.8.1"
  }
}
